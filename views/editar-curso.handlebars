{{!-- views/editar-curso.handlebars --}}
<h2 class="text-center">Editar Curso</h2>
<form method="POST" action="/curso/{{curso.id}}/editar">
  <div class="mb-3">
    <label for="titulo" class="form-label">Título</label>
    <input type="text" id="titulo" name="titulo" class="form-control" value="{{curso.titulo}}" required>
  </div>
  <div class="mb-3">
    <label for="descripcion" class="form-label">Descripción</label>
    <textarea id="descripcion" name="descripcion" class="form-control" required>{{curso.descripcion}}</textarea>
  </div>
  <div class="mb-3">
    <label for="duracion" class="form-label">Duración (semanas)</label>
    <input type="number" id="duracion" name="duracion" class="form-control" value="{{curso.duracion}}" required>
  </div>
  <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>